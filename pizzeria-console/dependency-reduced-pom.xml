<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>pizzeria-app</artifactId>
    <groupId>dta</groupId>
    <version>1.0.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>pizzeria-console</artifactId>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-jar-plugin</artifactId>
          <version>3.0.2</version>
          <configuration>
            <archive>
              <manifest>
                <mainClass>fr.pizzeria.ihm.Gestionnaire</mainClass>
              </manifest>
            </archive>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>dev</id>
      <dependencies>
        <dependency>
          <groupId>dta</groupId>
          <artifactId>pizzeria-dao-memoire</artifactId>
          <scope>runtime</scope>
        </dependency>
      </dependencies>
      <properties>
        <dao>fr.pizzeria.dao.DaoMemoireFactory</dao>
      </properties>
    </profile>
    <profile>
      <id>prod_fichier</id>
      <dependencies>
        <dependency>
          <groupId>dta</groupId>
          <artifactId>pizzeria-dao-fichier</artifactId>
          <scope>runtime</scope>
        </dependency>
      </dependencies>
      <properties>
        <dao>fr.pizzeria.dao.DaoFichierFactory</dao>
      </properties>
    </profile>
    <profile>
      <id>prod_jdbc</id>
      <dependencies>
        <dependency>
          <groupId>dta</groupId>
          <artifactId>pizzeria-dao-jdbc</artifactId>
          <version>1.0.0</version>
          <scope>runtime</scope>
        </dependency>
      </dependencies>
      <properties>
        <dao>fr.pizzeria.dao.DaoJdbcFactory</dao>
      </properties>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>

